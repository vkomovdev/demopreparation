@using DietPreparation.Web.Models.DietRequests.Rows
@using DietPreparation.Resources

@model DietPreparation.Web.Models.DietRequests.EditDietRequestViewModel

<table class="table table-hover" id="sample-table">
	<thead>
		<tr class="header">
			<th class="required">@ContentResources.Amount</th>
			<th class="required">@ContentResources.UnitOfMeasure</th>
			<th>@ContentResources.SampleDisposition</th>
			<th class="required">@ContentResources.SampleAnalysisType</th>
			<th>@ContentResources.SampleComments</th>
			<th>@ContentResources.Actions</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Samples is not null)
		{
			foreach (var sample in Model.Samples)
			{
				<tr>
					@await Html.PartialAsync("~/Views/DietRequest/CreateEdit/Rows/_SampleRowPartial.cshtml", sample)
					<td class="col-1">
						<input type="button" class="btn remove-row" value="@ContentResources.Remove"/>
					</td>
				</tr>
			}
		}
	</tbody>
	<tfoot>
		<tr class="add">
			@await Html.PartialAsync("~/Views/DietRequest/CreateEdit/Rows/_SampleRowPartial.cshtml", new DietRequestSample()
			{
				Amount = 0m
			})
			<td class="col-1">
				<input type="button" class="btn add-row" value="@ContentResources.Add"/>
			</td>
		</tr>
		<tr class="template">
			@await Html.PartialAsync("~/Views/DietRequest/CreateEdit/Rows/_SampleRowPartial.cshtml", new DietRequestSample()
			{
				Amount = 0m
			})
			<td class="col-1">
				<input type="button" class="btn remove-row" value="@ContentResources.Remove" />
			</td>
		</tr>
	</tfoot>
</table>